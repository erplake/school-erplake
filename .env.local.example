ENV=dev
APP_NAME=School ERPLake API (Local)
DATABASE_URL=postgresql://erplake:erplake@localhost:5544/schooldb
JWT_SECRET=change-me-in-production
RBAC_ENFORCE=false

# Redis (optional local) - adjust if running Redis container or service
REDIS_URL=redis://localhost:6379/0

# Storage configuration
STORAGE_DRIVER=local  # options: local,s3,gdrive
LOCAL_STORAGE_PATH=var/storage

# S3 / MinIO (if using STORAGE_DRIVER=s3)
MINIO_ENDPOINT=http://localhost:9000
MINIO_BUCKET=school-local
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123

# Logging & Metrics
LOG_FORMAT=plain  # or json

# OTP / Auth (tuning values)
ACCESS_TOKEN_TTL_SECONDS=900
REFRESH_TOKEN_TTL_SECONDS=1296000

# Alembic
ALEMBIC_CONFIG=services/api/alembic.ini
