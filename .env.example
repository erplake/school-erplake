# ---------- Database ----------
POSTGRES_DB=schooldb
POSTGRES_USER=school
POSTGRES_PASSWORD=schoolpass
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ---------- Redis ----------
REDIS_URL=redis://redis:6379/0

# ---------- Storage (S3 by default) ----------
STORAGE_DRIVER=s3
S3_ENDPOINT=
S3_REGION=ap-south-1
S3_BUCKET=erplake-school-demo
S3_ACCESS_KEY=
S3_SECRET_KEY=

# ---------- Google Drive (optional) ----------
GDRIVE_SERVICE_ACCOUNT_JSON=/secrets/gdrive.json
GDRIVE_ROOT_FOLDER_ID=

# ---------- Razorpay ----------
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# ---------- Gupshup (WhatsApp) ----------
GUPSHUP_API_KEY=
GUPSHUP_SOURCE=
GUPSHUP_APP=

# ---------- App ----------
SCHOOL_LOCALE=en-IN
SCHOOL_NAME=Demo Public School
SCHOOL_CODE=DEMO
SCHOOL_SUBDOMAIN=demo
JWT_SECRET=devsecret-change-me
ENV=dev

# ---------- MinIO (S3-compatible storage) ----------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=erplake-school-demo
MINIO_ENDPOINT=http://minio:9000
MINIO_REGION=us-east-1
